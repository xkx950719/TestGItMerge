<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.study.mycat.mapper.CityMapper">
	
	<resultMap type="com.study.mycat.model.City" id="baseResultMap">
		<id property="id" column="id" jdbcType="INTEGER"/>
		<result property="name" column="name" jdbcType="VARCHAR"/>
		<result property="state" column="state" jdbcType="VARCHAR"/>
	</resultMap>
	
	<select id="selectAll" resultMap="baseResultMap">
		select * from city
	</select>
	
	<select id="selectByPrimaryKey" resultMap="baseResultMap">
		select * from city where id = #{id}
	</select>
	
	<delete id="deleteByPrimaryKey">
		delete from city where id = #{id}
	</delete>
	
	<update id="updateByPrimaryKey" parameterType="com.study.mycat.model.City">
		update city set name=#{name}, state=#{state} where id=#{id}
	</update>
	
	<insert id="insert" parameterType="com.study.mycat.model.City">
		insert into city (name, state) value (#{name}, #{state})
	</insert>
</mapper>